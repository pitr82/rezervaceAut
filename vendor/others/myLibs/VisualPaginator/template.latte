{*
 * @version    $Id: template.phtml 2 2009-07-13 20:58:52Z david@grudl.com $
 * @param Paginator $paginator
 * @param array     $steps
 *}

{if $paginator->pageCount > 1}
    <ul class="pagination">
	{if $paginator->isFirst()}
	    <li class="disabled">« Předchozí</li>
	{else}
	    <li><a href="{plink this, 'page' => $paginator->page - 1}">« Předchozí</a></li>
	{/if}
	{foreach $steps as $step}
	    {if $step == $paginator->page}
	        <li class="active"><a href="{plink this}">{$step}</a></li>
	    {else}
		<li><a href="{plink this, 'page' => $step}">{$step}</a></li>
	    {/if}
	    {if $iterator->nextValue > $step + 1}<li><span>…</span></li>{/if}
	{/foreach}

	{if $paginator->isLast()}
	    <li class="disabled">Další »</li>
	{else}
	    <li><a href="{plink this, 'page' => $paginator->page + 1}">Další »</a></li>
	{/if}
    </ul>
{/if}
